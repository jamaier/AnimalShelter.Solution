@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h2>Animals</h2>

@if(@Model.Count == 0)
{
  <h4>There are no animals at this time!</h4>
}

<ul>
  @foreach (Animal animal in Model)
  {
    <li>@Html.ActionLink($"{animal.Description}", "Breed", new {id = animal.AnimalId})</li>
    <li>@Html.ActionLink($"{animal.Name}", "Name", new {id = animal.AnimalId})</li>
    <li>@Html.ActionLink($"{animal.Arrival}", "Arrival Date", new {id = animal.AnimalId})</li>
  }
</ul>