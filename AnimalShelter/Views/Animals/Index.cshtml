@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h2>Animals</h2>

@if(@Model.Count == 0)
{
  <h4>There are no animals at this time!</h4>
  <h4>@Html.ActionLink("Add new animal", "Create")</h4>
}

<ul>
  @foreach (Animal animal in Model)
  {
    <li>@Html.ActionLink($"{animal.Name}", "Details", new {id = animal.AnimalId})</li>
  }
</ul>

