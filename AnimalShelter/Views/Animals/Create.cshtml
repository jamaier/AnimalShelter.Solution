@{
  Layout = "_Layout";
}

   @model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.ArrivalDate)
  @Html.TextBoxFor(model => model.ArrivalDate)

  <input type="submit" value="Add new animal" />
}

<p>@Html.ActionLink("Show all animals", "Index")</p>